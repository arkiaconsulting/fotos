<MudPaper Class="album" Style="background-color: transparent; position: relative">
    <MudButton class="go" OnClick=AlbumClicked>
        <MudStack Spacing="0">
            <MudImage Src="img/folder.svg" Width="200">
            </MudImage>
            <MudText Class="title ml-4 mb-2">@Album.Name</MudText>
        </MudStack>
    </MudButton>
</MudPaper>

@code {
    [Parameter]
    public AlbumModel Album { get; set; } = default!;

    [Parameter]
    public EventCallback<AlbumModel> OnAlbumChanged { get; set; }

    private async Task AlbumClicked()
    {
        await OnAlbumChanged.InvokeAsync(Album);
    }
}
